%html
  %head
    %title &#x10E;&#xCB;&#xC3;&#xD0; &#xD0;&#x159;&#xD8;&#x1E57; - Intermediary Stash Keeper
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js' }
    %script{ :src => '/js/dropzone.js' }
    %script{ :src => '/js/svr_dropzone.js' }
  %body{ :onload => 'mk_dropzone();' }
    %link{ :href => 'http://fonts.googleapis.com/css?family=Rambla:700italic', :rel => 'stylesheet', :type => 'text/css' }
    %link{ :href => '/css/server.css', :rel => 'stylesheet', :type => 'text/css' }
    %h1 &#x10E;&#xCB;&#xC3;&#xD0; &#xD0;&#x159;&#xD8;&#x1E57;
    %hr
    %h3 Reaper
    %fieldset
      %legend stash your files
      %br
      %div{ :id => 'stashr', :style => 'color:white; background-color:grey; padding:10px;' } Drop files here.
      %form{ :method => 'post', :enctype => 'multipart/form-data' }
        %br
        %input{ :type => 'file', :name => 'dead_body' }
        %br
        %br
        %input{ :type => 'submit', :value => 'ReapIT' }
    %hr
    %h3 Reaped Souls
    %fieldset
      %legend your stash
      %ul{ :id => 'your_stash', :style => 'padding:10px;' }
        - @souls.each do |soul|
          %li
            %a{:href => "/stash/#{soul}"} "#{soul}"
          %br
    %hr
    %hr
